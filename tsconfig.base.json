{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@mcp-claw/shared": ["packages/shared/types/api.ts"],
      "@mcp-claw/shared/*": ["packages/shared/*"],
      "@mcp-claw/core": ["packages/core/src/index.ts"],
      "@mcp-claw/core/*": ["packages/core/src/*"]
    }
  }
}
